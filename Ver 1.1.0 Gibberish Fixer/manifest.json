{
  "manifest_version": 3,
  "name": "Gibberish Fixer",
  "version": "1.1.0",
  "description": "Fix Hebrew/English keyboard gibberish instantly",

  "permissions": ["activeTab", "scripting"],

  "background": {
    "service_worker": "background.js"
  },

  "commands": {
    "fix-gibberish": {
      "suggested_key": {
        "default": "Ctrl+Shift+H"
      },
      "description": "Fix selected gibberish text"
    }
  }
}
